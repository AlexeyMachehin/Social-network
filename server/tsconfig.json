{
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "outDir": "dist",
    "module": "NodeNext",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "removeComments": true
  },
  "include": [
    "src/**/*",
    ".eslintrc.js"
  ],
  "exclude": [
    "./test/",
    "./node_modules/",
    "./dist/"
  ],
  "ts-node": {
    "esm": true
  }
}
